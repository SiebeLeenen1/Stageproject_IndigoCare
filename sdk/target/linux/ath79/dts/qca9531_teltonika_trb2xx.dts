/dts-v1/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "qca953x.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,trb2xx", "qca,qca9531";
	model = "Teltonika TRB2XX";

	aliases {
		serial0 = &uart;
	};

	ext_io {
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		gpio-sck = <&gpio 0 GPIO_ACTIVE_HIGH>;  // SRCLK
		gpio-mosi = <&gpio 2 GPIO_ACTIVE_HIGH>; // SER
		cs-gpios = <&gpio 1 GPIO_ACTIVE_HIGH>;  // RCLK
		num-chipselects = <1>;

		shift_io: shift_io@0 {
			compatible = "fairchild,74hc595";
			reg = <0>;
			gpio-controller;
			#gpio-cells = <2>;
			registers-number = <2>;
			spi-max-frequency = <10000000>;
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&shift_io 9 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&shift_io 10 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <0>;
			gpios = <&shift_io 11 GPIO_ACTIVE_HIGH>;
		};
	};

	leds {
		compatible = "gpio-leds";

		eth_led {
			label = "eth_led";
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
		};

		led_gen_2 {
			label = "mob_gen_2";
			gpios = <&shift_io 0 GPIO_ACTIVE_HIGH>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&shift_io 1 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&shift_io 2 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&shift_io 3 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&shift_io 4 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&shift_io 5 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_power {
			label = "power";
			gpios = <&shift_io 8 GPIO_ACTIVE_LOW>;
			default-state = "on";
			retain-state-shutdown;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 14 GPIO_ACTIVE_LOW>;
		};
	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <2>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <16>; // Shift Register
			};
		};

		ioman {
			GPIO_3 {
				line_name = "GPIO_IN_1";
				active_low;
			};
			GPIO_4 {
				line_name = "GPIO_IN_2";
				active_low;
			};
			GPIO_12 {
				line_name = "GPIO_IN_3";
				active_low;
			};
			GPIO_45 {
				line_name = "GPIO_OUT_1";
			};
			GPIO_46 {
				line_name = "GPIO_OUT_2";
			};
			GPIO_47 {
				line_name = "GPIO_OUT_3";
			};
		};

		ledman {
			GPIO_11 {
				line_name = "LED_ETH_GREEN_1";
			};
			GPIO_40 {
				line_name = "LED_POWER";
				active_low;
			};
			GPIO_32 {
				line_name = "LED_TECH_GEN_2";
			};
			GPIO_33 {
				line_name = "LED_TECH_GEN_3";
			};
			GPIO_34 {
				line_name = "LED_TECH_GEN_4";
			};
			GPIO_35 {
				line_name = "LED_SSID_1";
			};
			GPIO_36 {
				line_name = "LED_SSID_3";
			};
			GPIO_37 {
				line_name = "LED_SSID_5";
			};
		};

		misc {
			GPIO_41 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_42 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_43 {
				line_name = "GPIO_SIM_SELECT";
			};
			GPIO_44 {
				line_name = "GPIO_RS485_RX_EN";
			};
		};
	};

	ioman {
		layout@0 {
			io@0 { // 16pin #2
				label = "dio0";
				block_type = BLOCK_16PIN;
				block_pin = "2";
				default_direction = "out";
				gpio_in = "GPIO_IN_1";
				gpio_out = "GPIO_OUT_1";
				io_param = "g1";
			};
			io@1 { // 16pin #3
				label = "dio1";
				block_type = BLOCK_16PIN;
				block_pin = "3";
				default_direction = "in";
				gpio_in = "GPIO_IN_2";
				gpio_out = "GPIO_OUT_2";
				io_param = "g2";
			};
			io@2 { // 16pin #4
				label = "dio2";
				block_type = BLOCK_16PIN;
				block_pin = "4";
				default_direction = "in";
				gpio_in = "GPIO_IN_3";
				gpio_out = "GPIO_OUT_3";
				io_param = "g3";
			};
			adc@0 {
				label = "adc0";
				block_type = BLOCK_16PIN;
				block_pin = "11";
				tolerance = "0.01";
				io_param = "g0";

				adc_cof@0 {
					devices =  "TRB245";
					hwver = "1,99";
					port = "1";
					multiplier = "0.01098310771717256256"; // 1 / 11
				};
				adc_cof@1 {
					devices = "TRB255";
					hwver = "2,2";
					port = "1";
					multiplier = "0.01098310771717256256"; // 1 / 11
				};
				adc_cof@2 {
					devices = "TRB255";
					hwver = "3,99";
					port = "1";
					multiplier = "0.022276596"; // 1047 / 47 / 1000
				};
			};
		};
	};
};

&mnfinfo {
	simpin1 {
		reg = <&config 0x70 0x10>;
		type = "digit";
		default = "";
	};

	simpin2 {
		reg = <&config 0x80 0x10>;
		type = "digit";
		default = "";
	};

	sim_cfg {
		reg = <&config 0x110 0x20>;
		type = "simcfg";
		default = "2111000_2112000";
		log;
	};

	sim_count {
		default =  "2";
	};
};

&spi {
	status = "okay";
	num-cs = <1>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x000000 0x020000>;
				read-only;
			};

			config: partition@20000 {
				label = "config";
				reg = <0x020000 0x010000>;
				read-only;
			};

			art: partition@30000 {
				label = "art";
				reg = <0x030000 0x010000>;
				read-only;
			};

			partition@40000 {
				label = "firmware";
				reg = <0x040000 0xf30000>;
				compatible = "denx,uimage";
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x090000>;
			};
		};
	};
};

&usb0 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	hub_port0: port@1 {
		reg = <1>;
		#trigger-source-cells = <0>;
	};
};

&usb_phy {
	status = "okay";
};

&uart {
	status = "okay";
};

&eth1 {
	status = "okay";
	mtd-mac-address = <&config 0x0>;
};
