#!/bin/sh /etc/rc.common

START=20

USE_PROCD=1

NAME=ledman
ARGS="-d"
PROG=/usr/bin/$NAME

start_service() {
	procd_open_instance

	procd_set_param command "$PROG" "$ARGS"
	procd_set_param stdout 1
	procd_set_param stderr 1

	procd_close_instance
}

reload_service() {
	stop
	start
}

service_triggers() {
	procd_add_reload_trigger "system"
}
